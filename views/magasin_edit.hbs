<h2>Add Store</h2>
<form action ="/magasins/add/{{magasin._id}}" class="card" method="POST" enctype="multipart/form-data">
    <label for="name">
        Name:
        <input type="text" name="name" id="name" value={{magasin.name}}>
    </label>
    <label for="slug">
        Slug:
        <input type="text" name="slug" id="slug" value={{magasin.slug}}>
    </label>
    <label for="photo">
        Img: 
        <input type="file" name="photo" id="photo" value={{magasin.photo}}>
    </label>
    <label for="desc">
        Desc:
        <textarea name="desc" id="desc" cols="30" rows="10">{{magasin.desc}}</textarea>
    </label><br>
    <label for="location[adress]">
        Address:
        <input type="text" name=location[adress] id="lng" value="{{magasin.location.adress}}">
    </label>
    <label for="location[coordinates][0]">
        Latitude:
        <input type="text" name="location[coordinates][0]" id="lng" value="{{magasin.location.coordinates.[0]}}">
    </label>
    <label for="location[coordinates][1]">
        Longitude:
        <input type="text" name="location[coordinates][1]" id="lat" value="{{magasin.location.coordinates.[1]}}">
    </label>
    <input type="submit" value="Valider">
</form>